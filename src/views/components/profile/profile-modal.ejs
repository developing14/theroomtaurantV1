<section class="modal flex-vertical">
  <div class="title-bar">
    <div class="title"><h1>Edit profile</h1></div>
    <button class="escape" type="button" onclick="closeModal()">X</button>
  </div>
  <form
    method="post"
    action="/profile"
    enctype="application/x-www-form-urlencoded"
    id="form-order"
  >
    <div class="labels flex-vertical .form-panel">
      <label for="infoName">Name</label>
      <label ">Email</label>
      <label for="infoPhone">Phone</label>
    </div>
    <div class="input flex-vertical .form-panel">
      <input type="text" name="infoName" id="infoName" required />
      <p id="warningModal">Email cannot be changed</p>
      <input type="text" name="infoPhone" id="infoPhone" required />
    </div>
  </form>
  <input id="edit-submit-btn" type="submit" value="Edit" form="form-order" />
</section>
